---
// --------------
// Single Post ==
// --------------

// TLO Widgets
import Layout from '~/layouts/Main.astro';
import Heading from '~/tlo/ui/Heading.astro';
import RelatedPosts from '~/tlo/widgets/RelatedPosts.astro';

// Typescript
import type { Post } from '~/types';
export interface Props {
  metadata: object,
  post: Post;
}

const { metadata, post } = Astro.props;
---
<Layout metadata={metadata}>
  <article class="tlo-post">

    <!-- Post Header -->
    <header class="tlo-header">

      <!-- Heading -->
      <Heading
        post={post}
        link={false}
      />
      
    </header>
    
    <!-- Content -->
    <div class="tlo-content">

      <!-- Post Content -->
      <slot />
      
    </div>

    <!-- Post Footer -->
    <footer class="tlo-footer">

      <!-- Related Posts -->
      <RelatedPosts post={post} />

    </footer>
  </article>
</Layout>
