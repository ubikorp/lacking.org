---

// ------------
// Tag Index ==
// ------------

import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { blogTagRobots, getStaticPathsBlogTag } from '~/utils/blog';

import { TLO, type TloCategory } from '~/utils/config';

import Pagination from '~/components/blog/Pagination.astro';

import Layout from '~/layouts/Main.astro';
import Listing from '~/tlo/widgets/PostListing.astro';
import CategoryHeader from '~/tlo/widgets/CategoryHeader.astro';
import AboutLacking from '~/tlo/widgets/AboutLacking.astro';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) => {
  return await getStaticPathsBlogTag({ paginate });
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { page, tag } = Astro.props as Props;

const currentPage = page.currentPage ?? 1;

const metadata = {
  title: `Posts by tag '${tag}'${currentPage > 1 ? ` â€” Page ${currentPage} ` : ''}`,
  robots: {
    index: blogTagRobots?.index,
    follow: blogTagRobots?.follow,
  },
};

const categoryInfo = TLO?.categories['tags'] as TloCategory
categoryInfo.title = tag
---

<Layout metadata={metadata}>

  <!-- Listing -->
  <Listing posts={page.data} />

  <!-- Pagination -->
  <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />

  <!-- Sidebar -->
  <Fragment slot="sidebar">

    <!-- Category Header -->
    <CategoryHeader category={categoryInfo} />

    <!-- About lacking.org -->
    <AboutLacking />

  </Fragment>
</Layout>
