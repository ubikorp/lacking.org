---
// ----------------------
// Category Index Page ==
// ----------------------

import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { blogCategoryRobots, getStaticPathsBlogCategory } from '~/utils/blog';

import Pagination from '~/components/tlo/archive/Pagination.astro';

import { TLO } from '~/utils/config';

import Layout from '~/layouts/tlo/Main.astro';
import Listing from '~/components/tlo/archive/Listing.astro';
import CategoryHeader from '~/components/tlo/widgets/CategoryHeader.astro';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) => {
  return await getStaticPathsBlogCategory({ paginate });
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths> & { category: string };

const { page, category } = Astro.props as Props;

const currentPage = page.currentPage ?? 1;

const metadata = {
  title: `Category '${category}' ${currentPage > 1 ? ` â€” Page ${currentPage}` : ''}`,
  robots: {
    index: blogCategoryRobots?.index,
    follow: blogCategoryRobots?.follow,
  },
};

const categoryInfo = TLO?.categories[category]
---

<Layout metadata={metadata}>

  <!-- Heading -->

  <!-- Listing -->
  <Listing posts={page.data} />

  <!-- Pagination -->
  <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />

  <!-- Sidebar -->
  <Fragment slot="sidebar">
    <!-- Category Header -->
    <CategoryHeader category={categoryInfo} />
  </Fragment>
  
</Layout>
