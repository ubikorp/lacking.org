---
// ----------------------
// Category Index Page ==
// ----------------------

import type { InferGetStaticPropsType, GetStaticPaths } from 'astro';
import { blogCategoryRobots, getStaticPathsBlogCategory } from '~/utils/blog';

import Pagination from '~/tlo/widgets/Pagination.astro';

import { TLO } from '~/utils/config';

import AboutLacking from '~/tlo/widgets/AboutLacking.astro';
import Layout from '~/layouts/Main.astro';
import Listing from '~/tlo/widgets/PostListing.astro';
import CategoryHeader from '~/tlo/widgets/CategoryHeader.astro';
import Heading from '~/tlo/widgets/Heading.astro';

export const prerender = true;

export const getStaticPaths = (async ({ paginate }) => {
  return await getStaticPathsBlogCategory({ paginate });
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths> & { category: string };

const { page, category } = Astro.props as Props;

const currentPage = page.currentPage ?? 1;
const title = `${category} ${currentPage > 1 ? ` â€” Page ${currentPage}` : ''}`;

const metadata = {
  title,
  robots: {
    index: blogCategoryRobots?.index,
    follow: blogCategoryRobots?.follow,
  },
};

const categoryInfo = TLO?.categories[category]
---

<Layout metadata={metadata}>

  <!-- Heading -->
  <Heading title={title} />

  <!-- Listing -->
  <Listing posts={page.data} />

  <!-- Pagination -->
  <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />

  <!-- Sidebar -->
  <Fragment slot="sidebar">

    <!-- Category Header -->
    <CategoryHeader category={categoryInfo} />

    <!-- About lacking.org -->
    <AboutLacking />

  </Fragment>
  
</Layout>
